@model IEnumerable<ToDo.Models.EventViewModel>

@{
    ViewBag.Title = "Todo List";
}

<h2>Todo List</h2>
<hr />
<p>
    @Html.ActionLink("Create New", "Create")

</p>

<table class="table table-striped table-bordered table-hover">

    <tr>

        <th class="text-center">
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Date)
        </th>

        <th class="text-center">
            @Html.DisplayNameFor(model => model.CreatedOn)
        </th>

        <th class="text-center">
            @Html.DisplayNameFor(model => model.UpdatedOn)
        </th>
        <th></th>
    </tr>

    @if (Model != null ) {
    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Date)
            </td>

            <td class="text-center">
                @Html.DisplayFor(modelItem => item.CreatedOn)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.UpdatedOn)
            </td>
            <td class="text-center">

                @Html.ActionLink("Edit", "Edit", new { EventId = item.EventId }) |
                @Html.ActionLink("Details", "Details", new { EventId = item.EventId }) |
                @Html.ActionLink("Delete", "Delete", new { EventId = item.EventId }, new { onclick = "return confirm('Are you sure you wish to delete?');" })


            </td>
        </tr>
    }
    }
</table>


